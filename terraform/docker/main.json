{
  "resource": {
    "docker_image": {
      "blog_app": {
        "name": "ivanakoceva/blog-app:latest"
      },
      "blog_db": {
        "name": "postgres:17-alpine"
      }
    },
    "docker_network": {
      "blog_network": {
        "name": "blog_network"
      }
    },
    "docker_volume": {
      "blogdb_data": {
        "name": "blogdb_data"
      }
    },
    "docker_container": {
      "db_service": {
        "image": "${docker_image.blog_db.image_id}",
        "name": "db_service",
        "networks_advanced": [
          {
            "name": "${docker_network.blog_network.name}"
          }
        ],
        "ports": [
          {
            "internal": 5432,
            "external": "${var.postgres_port}"
          }
        ],
        "env": [
          "POSTGRES_DB=${var.postgres_db}",
          "POSTGRES_USER=${var.postgres_user}",
          "POSTGRES_PASSWORD=${var.postgres_password}"
        ],
        "volumes": [
          {
            "volume_name": "${docker_volume.blogdb_data.name}",
            "container_path": "/var/lib/postgresql/data"
          }
        ]
      },
      "blog_service": {
        "image": "${docker_image.blog_app.image_id}",
        "name": "blog_service",
        "networks_advanced": [
          {
            "name": "${docker_network.blog_network.name}"
          }
        ],
        "ports": [
          {
            "internal": 8080,
            "external": "${var.app_port}"
          }
        ],
        "env": [
          "POSTGRES_HOST=db_service",
          "POSTGRES_USER=${var.postgres_user}",
          "POSTGRES_PASSWORD=${var.postgres_password}",
          "POSTGRES_PORT=${var.postgres_port}",
          "POSTGRES_DB=${var.postgres_db}"
        ],
        "depends_on": [
          "docker_container.db_service"
        ]
      }
    }
  }
}